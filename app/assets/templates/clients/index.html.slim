view-title Companies

.add-button
  md-button ng-click="newClient($event)" class="md-button md-fab md-mini add-icon" aria-label="add client"
    md-icon md-font-icon="fa-plus" class="fa add-plus"

div ng-include="'clients/_index_navigation.html'"

in-loading collection="clients"

md-content class="md-padding" layout="column"
  div flex="" layout="row" ng-if='clients && clients.length <= 0'
    div flex="50" offset="25"
      .white-panel.pn.donut-chart
        .white-header
          h5 Notice!
        div layout="column"
            p You need to create a client in order to continue
        md-divider
        footer.clearfix
          md-button href="#" class="md-primary" ng-click="newClient($event)"
            .fa.fa-plus
            | Add New Client

  div.clients flex="" ng-if='clients && clients.length > 0'
    section.client layout="row" layout-wrap="" ng-repeat="client in clients"
      dif flex="10"
        div#donut-cont donut-chart="" donut-data="client.statistics.percent_by_state" donut-colors="client.statistics.colors" donut-formatter='"currency"'
      div flex="90"
        section
          h2.pl
            | {{ client.name }}
        section.statuses
          span.state ng-repeat="(state, count) in client.states" ng-hide="count == 0"
            | {{state | invState}} ({{count}})

          .actions
            md-fab-speed-dial md-direction="left" class="md-fling"
              md-fab-trigger
                md-button.md-icon-button aria-label="menu"
                  md-icon.more-icon md-svg-src="#{asset_path('icons/more_icon.svg')}"
              md-fab-actions
                a href="/invoices/new/client/{{client.id}}"
                  md-button class="md-raised md-primary"
                    | Add Invoice
                a.delete href="#" ng-click="removeClient(client.id)"
                  img.inline  src="#{asset_path('delete.png')}"
                  | Remove
                a.edit href='#' ng-click="editClient($event, client.id)"
                  img.inline  src="#{asset_path('pen.png')}"
                  | Edit
