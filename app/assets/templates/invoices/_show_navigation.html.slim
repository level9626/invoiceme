/ Navigation
md-content
  header.profile-sub-menu layout="row"
    .pull-left.date
      img.inline src="#{asset_path('calendar.png')}"
      span
        | Invoice Date - 
        span.date
          | {{ invoice.invoice_date | date:'d MMM yyyy' }}
    ul.nav.top-menu.right
      li
        a.edit href='invoices/{{invoice.id}}/edit'
          img.inline  src="#{asset_path('pen.png')}"
          | Edit
      li
        a.delete href="#"
          img.inline  src="#{asset_path('delete.png')}"
          | Delete
      li
        a.download href="#"
          img.inline  src="#{asset_path('download.png')}"
          | Download PDF
      li
        a.mail href="#"
          img.inline  src="#{asset_path('mail.png')}"
          | Send Mail
      li
        a.btn.btn-theme2.btn-danger ng-disabled="invoice.journals_count === 0" href='#' ng-click="journals($event)"
          | ACTIVITIES
          span.badge
            span
              | {{invoice.journals_count}}
      li
        a.btn.btn-theme2.btn-primary href='#' ng-click="receive_payment($event)"
          | RECEIVE PAYMENT
          span.badge
            span
              | {{invoice.payments.length}}
