<div id="login-page">
  <div class="container">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', class: 'form-login'}) do |f| %>
      <h2 class="form-login-heading">sign in now</h2>
      <div class="login-wrap">
        <%= devise_error_messages! %>
          <%= f.email_field :email, :autofocus => true, placeholder: 'User email', class: 'form-control' %>
          <br>
          <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
            <div class="inline-block">
              <% if devise_mapping.rememberable? -%>
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me %> Remember me
                  </label>
                </div>
              <% end -%>
            </div>

          <%= button_tag(type: 'submit', class: "btn btn-theme btn-block") do %>
            <i class="fa fa-lock"></i> SIGN IN
          <% end %>
        <hr>

        <div class="login-social-link centered">
          <p>or you can sign in via your social network</p>
          <button class="btn btn-facebook" type="submit"><i class="fa fa-facebook"></i> Facebook</button>
          <button class="btn btn-twitter" type="submit"><i class="fa fa-twitter"></i> Twitter</button>
        </div>
        <hr>
        <div class="registration">
          Don't have an account yet?<br/>
          <%- if devise_mapping.registerable? %>
            <%= link_to 'Create an account', new_registration_path(resource_name), class: 'center'  %>
          <% end -%>
        </div>
        <hr>
        <div class="registration">
          Forgot your password?<br/>
          <%- if devise_mapping.recoverable? %>
            <%= link_to "Restore password", new_password_path(resource_name) %> <%#=sessionpath%>
          <% end -%>
        </div>

      </div>
    <% end %>
  </div>
</div>